<!doctype html>
<html>

<head>
  <title>Pizza time</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span> Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
      <a href="/" class="btn btn-default btn-sm">Home</a>
    </div>

    <div class="row">
              
      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>

          <% if (user.local.email) { %>
            <p>
              <strong>id</strong>: <%= user._id %><br>
              <strong>Username</strong>: <%= user.local.username %><br>
                <strong>Email</strong>: <%= user.local.email %><br>
            </p>

            <a href="/unlink/local" class="btn btn-default">Unlink</a>
            <% } else { %>
              <a href="/connect-local" class="btn btn-default">Connect Local</a>
              <% } %>
      </div>
      <div class="col-sm-6">
        <h3>Pizza Orders</h3>
        <ul class="orders">
          <% for(var i=0; i<orders.length; i++) {%>
            <li class="order">
              <span><%= orders[i].name %></span>
              <span data-id='<%= orders[i]._id %>'><%= orders[i].order %></span>
              <div class="hide">
                <input  name="" placeholder="topping">
              </div>
              <span><i class="fa fa-pencil"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
            <% } %>
        </ul>
        
      </div>
      <section class="orderContainer">
        <div class="orderTitle">
          <h2>Welcome: Input Order Below</h2>
        </div>
    
        <form class="orderTitle" action="/messages" method="POST">
          <input type="text" class='name2' value="" placeholder="customer name" name="name">
          <label for="pepperoni">Pepperoni</label>
          <input type="radio" name="order" id="pepperoni" value="Pepperoni">
          <label for="cheese">Cheese</label>
          <input type="radio" name="order" id="cheese" value="Cheese">
          <label for="pineapple">Pineapple</label>
          <input type="radio" name="order" id="pineapple" value="Pineapple">
          <label for="hamburger">Hamburger</label>
          <input type="radio" name="order" id="hamburger" value="Hamburger">
          <label for="vegan">Vegan</label>
          <input type="radio" name="order" id="vegan" value="Vegan">
          <select class="Size" name="orderSize">
            <option value="Small">Small</option>
            <option value="Medium">Medium</option>
            <option value="Large">Large</option>
          </select>
          <button type="submit">Submit</button>
        </form>
      </section>
      <script src="main.js"></script>

</body>

</html>